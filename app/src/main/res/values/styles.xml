<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/sky_blue</item>
        <item name="colorAccent">@color/sky_blue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeRatingBar" parent="Theme.AppCompat">
        <item name="colorAccent">@color/sky_blue</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/sky_blue</item>
    </style>

</resources>
